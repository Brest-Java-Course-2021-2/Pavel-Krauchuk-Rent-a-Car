<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="carDtoDao" class="com.epam.brest.dao.CarDtoDaoJdbc">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="carDtoService" class="com.epam.brest.service.impl.CarDtoServiceImpl">
        <constructor-arg name="carDtoDao" ref="carDtoDao"/>
    </bean>

    <bean id="carDao" class="com.epam.brest.dao.CarDaoJDBCImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="carService" class="com.epam.brest.service.impl.CarServiceImpl">
        <constructor-arg name="carDao" ref="carDao"/>
    </bean>

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath*:test-db.properties</value>
                <value>classpath*:sql-car.properties</value>
            </list>
        </property>
    </bean>
</beans>